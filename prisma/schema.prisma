generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ═══════════════════════════════════════════════════════════════
// ENUMS (PostgreSQL supports native enums)
// ═══════════════════════════════════════════════════════════════


enum Role {
  USER
  ADMIN
  HOST
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum BookingPhase {
  NOT_BOOKED
  BOOKED_PENDING
  IN_PROGRESS
  COMPLETED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum DiscountType {
  ZAD
  KAIF
}

enum MessageType {
  TEXT
  IMAGE
  SYSTEM
}


// ═══════════════════════════════════════════════════════════════
// MODELS
// ═══════════════════════════════════════════════════════════════


model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  passwordHash  String?
  phone         String?
  role          Role      @default(USER)
  image         String?
  
  bookings      Booking[]
  reviews       Review[]
  ownedChalets  Chalet[]  @relation("ChaletOwner")
  
  // New Relations
  discountUsage DiscountUsage[]
  groupMemberships GroupMember[]
  hostedGroups  BookingGroup[] @relation("GroupHost")
  messages      Message[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}


model Chalet {
  id          String    @id @default(cuid())
  name        String
  description String
  price       Float
  location    String
  address     String?
  
  images      String    // JSON array of image URLs
  amenities   String    // JSON array of amenity keys
  
  capacity    Int       @default(2)
  bedrooms    Int       @default(1)
  bathrooms   Int       @default(1)
  
  rating      Float     @default(5.0)
  
  ownerId     String?
  owner       User?     @relation("ChaletOwner", fields: [ownerId], references: [id])
  
  bookings    Booking[]
  reviews     Review[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Booking {
  id              String        @id @default(cuid())
  
  chaletId        String
  chalet          Chalet        @relation(fields: [chaletId], references: [id])
  
  userId          String?
  user            User?         @relation(fields: [userId], references: [id])
  
  startDate       DateTime
  endDate         DateTime
  
  guestName       String
  guestEmail      String
  guestPhone      String
  guestCount      Int           @default(1)
  
  totalPrice      Float
  pricePerNight   Float         @default(0)
  nights          Int           @default(1)
  basePrice       Float         @default(0)
  cleaningFee     Float         @default(0)
  serviceFee      Float         @default(0)
  
  status          BookingStatus @default(PENDING)
  paymentStatus   PaymentStatus @default(PENDING)
  paymentMethod   String?
  
  // Stripe payment fields

  stripeSessionId       String?
  stripePaymentIntentId String?
  
  // Relations
  discountUsage   DiscountUsage[]
  bookingGroup    BookingGroup?

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}


model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  chaletId  String
  chalet    Chalet   @relation(fields: [chaletId], references: [id])
  
  createdAt DateTime @default(now())
}


model Partner {
  id          String   @id @default(cuid())
  name        String
  category    String
  discount    String
  description String
  logo        String
  qrValue     String   @unique
  
  isActive    Boolean  @default(true)
  
  discounts   Discount[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ═══════════════════════════════════════════════════════════════
// NEW MODELS
// ═══════════════════════════════════════════════════════════════

model Discount {
  id          String       @id @default(cuid())
  name        String
  nameAr      String
  description String
  type        DiscountType // ZAD or KAIF
  category    String       // gas, meat, transport, bowling, karting
  value       Float        // percentage or fixed amount
  validUntil  DateTime?
  partnerId   String?
  partner     Partner?     @relation(fields: [partnerId], references: [id])
  usedBy      DiscountUsage[]
  createdAt   DateTime     @default(now())
}

model DiscountUsage {
  id         String   @id @default(cuid())
  discountId String
  discount   Discount @relation(fields: [discountId], references: [id])
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  bookingId  String?
  booking    Booking? @relation(fields: [bookingId], references: [id])
  usedAt     DateTime @default(now())
}

model BookingGroup {
  id          String   @id @default(cuid())
  bookingId   String   @unique
  booking     Booking  @relation(fields: [bookingId], references: [id])
  hostId      String
  host        User     @relation("GroupHost", fields: [hostId], references: [id])
  members     GroupMember[]
  messages    Message[]
  createdAt   DateTime @default(now())
}

model GroupMember {
  id           String       @id @default(cuid())
  groupId      String
  group        BookingGroup @relation(fields: [groupId], references: [id])
  userId       String
  user         User         @relation(fields: [userId], references: [id])
  hasRated     Boolean      @default(false)
  canUseKaif   Boolean      @default(false)
  joinedAt     DateTime     @default(now())
  
  @@unique([groupId, userId])
}

model Message {
  id        String       @id @default(cuid())
  groupId   String
  group     BookingGroup @relation(fields: [groupId], references: [id])
  senderId  String
  sender    User         @relation(fields: [senderId], references: [id])
  content   String
  type      MessageType  @default(TEXT)
  createdAt DateTime     @default(now())
}

